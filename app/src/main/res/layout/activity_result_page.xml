<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">
    <TextView
        android:id="@+id/tvClearSky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clearSky"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lift_motor_test"
        android:layout_below="@+id/tvClearSky"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/tv2"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/tv2"
        android:layout_toRightOf="@+id/tvAddress"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tvLift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lift"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/tvAddress"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvLift"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/nxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_chevron_right_black_24dp" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/tob_selector"
            app:tabGravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:tabIndicatorHeight="0dp" />

        <ImageView
            android:id="@+id/prv"
            android:visibility="gone"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
             />
    </RelativeLayout>

</RelativeLayout>